<%- include ('../global/header', {title:"Create Discussion", isBlog:true}); %>
<%- include ('../global/navbar', {blog_info: allPosts, isBlog:true}); %>

<h1>Create a Discussion Post</h1><br>

<form action="/discussion" method="post" align="center">

  <label for="author">Author:</label><br>
  <select name="author" id="author">
    <%for(let i in validAuthors.allowed_authors){%>
      <%let author = validAuthors.allowed_authors[i]; %>
      <option value="<%=author%>"><%=author%></option>
    <%}%>
  </select><br><br>

  <label for="title">Title:</label><br>
  <input type="text" id="title" name="title"><br>

  <label for="date">Date:</label><br>
  <input type "text" id="date" name="date"><br>

  <label for="content">Comment:</label><br>
  <input type="text" id="content" name="content"><br>


  <input type="submit" value="Submit">
</form>

<script src="/js/scripts.js"></script>
</body>

</html>
