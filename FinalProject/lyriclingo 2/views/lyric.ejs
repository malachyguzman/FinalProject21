<html lang="en">

<%- include('global/navbar', {entry: totalposts}); %>
<%- include('global/header', {title: "Find your Lyrics!"}); %>



<header <br>
  <h2> Enter the Song Title and Artist!</h2>
</header>

<div class="top row">
  <div class="row ">
        <div class="col-lg-3">
        </div>
        <div class="col-lg-6">
          <div class="search">
            <form action="/lyrics" method="get">
            <input type="text" name="artist" class="search-artist" autofocus="autofocus" placeholder="Enter Artist" id="search-input" />

            <input type="text" name="title" class="search-title" autofocus="autofocus" placeholder="Enter Song Title" id="search-input" />

            <input type="submit" value="Submit">
          </form>
          </div>

          <div class="lyrics" id="lyrics">
          </div>
        </div>
        <div class="col-lg-3">
        </div>
  <div class="row ">
    <%= text %>
      </div>


  </div>

</div>









<script src="js/scripts.js"></script>
<%- include('global/footer'); %>

</html>
